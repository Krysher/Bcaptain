.updateNews.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				button.close(data-dismiss='modal') x
				h4 Update Event
			.modal-body
				form#set-form-valid.well
					h6 Please tell us a little about this Event.
					.form-group
						label.control-label.col-sm-3 Event Name
						.col-sm-9
							input.form-control#event_name(type='text', name='event_name', value="", data-rule-required="true").form-control
							input.form-control#name-tf(type='hidden', name='event_id', value="")
					.form-group
						label.control-label.col-sm-3 Event End Time
						.col-sm-9
							input.form-control#event_length(type='number', step='.1', name='event_duration', value="", data-rule-required="true").form-control
					.form-group
						label.control-label.col-sm-3 Event Type
						.col-sm-9
							select(name='event_type')#event_type.form-control
								option(value='Event') Event
								option(value='Notice') Notice
								option(value='Information') Information
					.form-group
						label.control-label.col-sm-3 Start Date and Time
						.col-sm-9
							input#datetimepickers(type='text', name='event_date', data-rule-required="true").form-control
					.form-group
						label.control-label.col-sm-3 Description
						.col-sm-9
							textarea#eventDescription.form-control(rows='5', data-rule-required="true")
					.form-group
						button(type='button', onclick="$('.updateNews').modal('hide');")#updateResident-form-btn1.btn.btn-default
						button(type='submit')#updateResident-form-btn2.btn.btn-primary
block scripts
